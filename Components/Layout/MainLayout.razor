@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<!DOCTYPE html>
    <html lang="tr" data-theme="@(isDarkMode ? "dark" : "light")" class="@(isDarkMode ? "dark-theme" : "light-theme")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TunCRM - Müşteri İlişkileri Yönetimi</title>
    <base href="/" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="app.css" rel="stylesheet" />
    <HeadOutlet />
</head>
<body>
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main class="main-content">
            <div class="content-header">
                <div class="header-left">
                    <h2 class="page-title">@PageTitle</h2>
                </div>
                <div class="header-right">
                    <GlobalSearch />
                </div>
            </div>
            <div class="content-body">
                @Body
            </div>
        </main>
    </div>

    <div id="blazor-error-ui" data-nosnippet>
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Beklenmeyen bir hata oluştu.
            <a href="." class="btn btn-sm btn-outline-danger ms-2">Yeniden Yükle</a>
            <span class="dismiss">🗙</span>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="_framework/blazor.web.js"></script>
    <script src="bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/file-download.js"></script>
    <script src="js/dashboard-charts.js"></script>
    <script src="js/theme.js"></script>
</body>
</html>

@code {
    [Parameter] public string PageTitle { get; set; } = "Ana Sayfa";
    private bool isDarkMode = false;

    protected override void OnInitialized()
    {
        // Tema state'ini başlat
        isDarkMode = false;
    }

    // UpdateTheme method removed - not needed anymore
}